<main class="main">
  <div class="container-fluid overflow-hidden">
    <div class="row vh-100 overflow-auto">
      <div class="col d-flex flex-column h-sm-100 mt-50">
        <div class="col pt-4">
          <% errs = (typeof errors != 'undefined') %>
          <form class="p-5" enctype="multipart/form-data" method="POST" action="/categouries">
            <div class="form-group">
              <label>Name</label>
              <input type="text" class="form-control" name="name" value="<%= (typeof name != 'undefined') ? name: ''%>" aria-describedby="emailHelp"
                placeholder="Enter categoury name">
              <% if (errs && typeof errors.name != 'undefined') { %>
              <% for (let err of errors.name) { %>
              <p id="emailHelp" class="form-text text-muted"><%= err %></p>
              <% } } %>
            </div>
            <div class="form-group">
              <label>photo</label>
              <input type="file" class="form-control" name="photo" value="<%= (typeof photo != 'undefined') ? photo: ''%>">
              <% if (errs && typeof errors.photo != 'undefined') { %>
                <% for (let err of errors.photo) { %>
                <p id="emailHelp" class="form-text text-muted"><%= err %></p>
                <% } } %>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</main>