

<main class="main">
  <div class="container-fluid overflow-hidden">
    <div class="row vh-100 overflow-auto">
      <div class="col d-flex flex-column h-sm-100 mt-50">
        <div class="col pt-4">
          <% errs = (typeof errors != 'undefined') %>
          <form class="p-5" method="POST" action="/coupons">
            <div class="form-group">
              <label>code</label>
              <input type="text" class="form-control" name="code" value="<%= (typeof code != 'undefined') ? code: ''%>" aria-describedby="emailHelp"
                placeholder="Enter your Code">
              <% if (errs && typeof errors.code != 'undefined') { %>
              <% for (let err of errors.code) { %>
              <p id="emailHelp" class="form-text text-muted"><%= err %></p>
              <% } } %>
            </div>
            <div class="form-group">
              <label>sale</label>
              <input type="number" class="form-control" name="sale" value="<%= (typeof sale != 'undefined') ? sale: ''%>">
              <% if (errs && typeof errors.sale != 'undefined') { %>
                <% for (let err of errors.sale) { %>
                <p id="emailHelp" class="form-text text-muted"><%= err %></p>
                <% } } %>
            </div>
            <div class="form-group">
              <label>endDate</label>
              <input type="date" class="form-control" name="endDate" value="<%= (typeof endDate != 'undefined') ? endDate: ''%>">
              <% if (errs && typeof errors.endDate != 'undefined') { %>
                <% for (let err of errors.endDate) { %>
                <p id="emailHelp" class="form-text text-muted"><%= err %></p>
                <% } } %>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</main>