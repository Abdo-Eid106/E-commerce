<div class="pagination-area mt-15 mb-sm-5 mb-lg-0">
  <nav aria-label="Page navigation example">
    <ul class="pagination justify-content-start">
      <% if (page > 1) { %>
      <li class="page-item"><a class="page-link" href="<%= path %>?<%= getQuery({ page: page - 1})%>"><i
            class="fi-rs-angle-double-small-left"></i></a>
      <% if (page - 1 > 1) { %>
      <li class="page-item"><a class="page-link" href="<%= path %>?<%= getQuery({ page: 1})%>">1</a></li>
      <% if (page - 1 != 2) { %>
      <li class="page-item"><a class="page-link dot">...</a></li>
      <% } } %>
      <li class="page-item"><a class="page-link" href="<%= path %>?<%= getQuery({ page: page - 1})%>"><%= page - 1 %></a></li>
      </li>
      <% } %>
      <li class="page-item active"><a class="page-link" href="<%= path %>?<%= getQuery({ page: page })%>"><%= page %></a></li>
      <% if (page < pages) { %>
      <% if (page + 1 < pages) { %>
      <li class="page-item"><a class="page-link" href="<%= path %>?<%= getQuery({ page: page + 1})%>"><%= page + 1 %></a></li>
      <% if (page + 1 != pages - 1) { %>
      <li class="page-item"><a class="page-link dot">...</a></li>
      <% } } %>
      <li class="page-item"><a class="page-link" href="<%= path %>?<%= getQuery({ page: pages })%>"><%= pages %></a></li>
      <li class="page-item"><a class="page-link" href="<%= path %>?<%= getQuery({ page: page + 1})%>"><i
            class="fi-rs-angle-double-small-right"></i></a></li>
      <% } %>
    </ul>
  </nav>
</div>